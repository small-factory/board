<script>
function getDistricts() {
    var distPromise = new Promise(function (resolve, reject) { 
        $.getJSON('/allDistricts', function(data) {
            console.log(data);
            $('#example1 tbody').html('');
            data.forEach((district) => {
                $('#example1 tbody').append(`
                <tr id='${district._id}' class="districtRow">
                    <td class="distName">${district.districtName}</td>
                    <td class="contactName">${district.contactName}</td>
                    <td>#</td>
                    <td>#</td>
                    <td style="text-align:right;" class="actions">
                        <i class="material-icons editDistrict" style="cursor:pointer;" data-toggle="modal" data-target="#editDistrict">
