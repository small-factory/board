                        </i> 
                        
                    </td>
                </tr>`)
            })
            $('.editDistrict').click(function() {
                console.log('edit this')
                var existingDist = $(this).parent('td').siblings('td.distName').text().trim();
                var existingContact = $(this).parent('td').siblings('td.contactName').text().trim();
                console.log(existingContact, existingDist);
                $(this).closest('.districtRow').removeClass('districtRow');
                $(this).parent('td').siblings('td.distName').html(`
                <div class="input-group input-group-sm">
                <input type="text" class="form-control newDist" value="${existingDist}">
                    <span class="input-group-btn">
                      <button type="button" class="btn btn-info btn-flat saveDist" style="padding: 2px 5px;"><i class="material-icons" style="font-size:24px">
check_circle
</i></button>
                    </span>
              </div>
                `);
                $(this).parent('td').siblings('td.contactName').html(`
                <div class="input-group input-group-sm">
                <input type="text" class="form-control newContact" value="${existingContact}">
                    <span class="input-group-btn">
                      <button type="button" class="btn btn-info btn-flat saveContact" style="padding: 2px 5px;"><i class="material-icons" style="font-size:24px">
check_circle
</i></button>
                    </span>
              </div>
                `)

                $('button.saveDist').click(function() {
                    var newDist = $(this).parent('span').siblings('input.newDist').val();
                    var thisId = $(this).parent('span').parent('div').parent('td').parent('tr').attr('id');
                    console.log(thisId);
                    $.ajax({
                    url: "/updateDistrict/"+thisId,
                    method: "PUT",
                    data: {districtName: newDist},
                    success: function(res) {
                        console.log('respnse', res);
                        location.reload();
                    }
                });
                })

                $('button.saveContact').click(function() {
                    var newCust = $(this).parent('span').siblings('input.newContact').val();
                    var thisId = $(this).parent('span').parent('div').parent('td').parent('tr').attr('id');
