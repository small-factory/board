<script>
$(document).ready(function() {
    $('li.bg-green').remove();
})
function getBrokerages() {
  $('#example1 tbody').html('');
  $.getJSON('/allBrokerages', function(brokerageData) {
      console.log(brokerageData);
      brokerageData.forEach(function(brokerage) {
        $('#example1 tbody').append(`
          <tr id='${brokerage._id}' class="brokerageRow">
              <td class="name">${brokerage.name}</td>
              <td class="email">${brokerage.email}</td>
              <td class="phone">${brokerage.phone}</td>
              <td class="location">${brokerage.location}</td>
          `);
    })
    $('#example1 tbody tr').click(function() {
      $('.hid2').click();
      console.log('update me');
      var id = $(this).attr('id');
      var name = $(this).children('td.name').text();
      var email = $(this).children('td.email').text();
      var phone = $(this).children('td.phone').text();
      var location = $(this).children('td.location').text();
      
      console.log(name)

      $('#updateName').val(name);
      $('#updateEmail').val(email);
      $('#updatePhone').val(phone);
      $('#updateLocation').val(location);
      $('button.updateBrokerage').attr('id', id);

    })

  })
}

getBrokerages()
$('.addBrokerage').click(function() {
      var name = $('input#name').val();
      var email = $('input#email').val();
      var phone = $('input#phone').val();
      var location = $('input#location').val();
        $.ajax({
            url: "/addBrokerage",
            method: "POST",
            data: {
                name,
                email,
                phone,
                location
            },
            success: function(res) {
              console.log('response', res);
              getBrokerages()
            }
        });
  })

  $('.updateBrokerage').click(function() {
      var id = $(this).attr('id');
      var name = $('input#updateName').val();
      var email = $('input#updateEmail').val();
      var phone = $('input#updatePhone').val();
      var location = $('input#updateLocation').val();
        $.ajax({
            url: "/updateBrokerage/"+id,
            method: "POST",
            data: {
                name,
                email,
                phone,
                location
            },
            success: function(res) {
              console.log('response', res);
              $('#modal-default > div > div > div.modal-header > button').click();
              getBrokerages()
            }
        });
  })

  $('.deleteBrokerage').click(function() {
      var id = $('.updateBrokerage').attr('id');
      $.ajax({
            url: "/deleteBrokerage/"+id,
            method: "DELETE",
            data: {},
            success: function(res) {
              console.log('response', res);
              $('#modal-default > div > div > div.modal-header > button').click();
              getBrokerages()
            }
        });
    })
</script>
