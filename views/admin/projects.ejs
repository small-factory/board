  $.getJSON('/allProjects', function(projectData) {
      console.log(projectData);
      projectData.forEach(function(project) {
        $('#example1 tbody').append(`
                <tr id='${project._id}' class="projectRow" data-toggle="modal" data-target="#modal-default">
                    <td class="name">${project.name}</td>
                    <td class="category">${project.category}</td>
                    <td class="points">${project.pointValue}</td>
                    <td class="image"><img src="${project.image}" style="height: 30px;"></td>
                    
                    `);
    })
    $(document).ready(function() {
      $('#example1').DataTable({
        "pageLength": 50
      });
    })


    $('#example1 tbody tr').click(function() {
        //$('.hid2').click();
        if (CKEDITOR.instances['editor1']) {
          console.log('need to destroy')
        }
        console.log('update me');
        var id = $(this).attr('id');
        var obj = projectData.find(x => x._id === id);
        console.log(obj);
        $('#updateName').val(obj.name)
        
        $(`.updateCategories option[value="${obj.category}"]`).attr("selected", "selected");
        if (CKEDITOR.instances.editor1) {
          CKEDITOR.instances['editor1'].setData(obj.description)
        } else {
          CKEDITOR.replace('editor1');
        }
        $('#editor1').html(obj.description);
        $('#updatePoints').val(obj.pointValue)
        if (obj.image) {
          $('.existingImage').html(`<strong>Existing Image: </strong><img src="${obj.image}" style="height: 60px;">`)
        }
        

        $('.updateProject').click(function() {
          //var baseImage = getBase64($('input#sampleFile')[0].files[0]);
          var file = document.querySelector('input#sampleFile').files[0];
          getBase64(file).then(image => {
            
              $.ajax({
                url: "/admin/updateProject",
                method: "POST",
                data: {
                  id,
                  name: $('#updateName').val(),
                  category: $('.updateCategories option:selected').val(),
                  description: CKEDITOR.instances.editor1.getData(),
                  image
                },
                success: function(res) {
                  console.log('response', res);
                }
            });
          });
          
          
        })


$('.deleteProject').click(function() {
